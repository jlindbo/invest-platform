# Environment
NODE_ENV=production
PORT=3000

# Database (Heroku PostgreSQL addon will set DATABASE_URL automatically)
# DATABASE_URL will be provided by Heroku Postgres addon

# Redis (Heroku Redis addon will set REDIS_URL automatically)
# REDIS_URL will be provided by Heroku Redis addon
REDIS_PASSWORD=

# Bull Queue Redis Configuration
# Use the same Redis instance from Heroku Redis addon
# BULL_REDIS_HOST and BULL_REDIS_PORT will be parsed from REDIS_URL

# ML Service (if deployed separately)
ML_SERVICE_URL=http://localhost:8000

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# CORS
CORS_ORIGIN=https://your-frontend-app.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Job Schedules (Cron expressions)
PRICE_COLLECTION_SCHEDULE=0 16 * * 1-5
INTRADAY_COLLECTION_SCHEDULE=*/2 9-16 * * 1-5
NEWS_SCRAPING_SCHEDULE=0 */2 * * *
PREDICTION_SCHEDULE=0 6 * * 1-5
OPPORTUNITY_SCAN_SCHEDULE=*/30 * * * *

# Cache TTL (seconds)
CACHE_LIVE_COMPARISON_TTL=300
CACHE_INTRADAY_TTL=120

# Scraping Configuration
USER_AGENT=JGroupInvest/1.0 (Educational Purpose)
SCRAPING_DELAY_MS=2000
MAX_CONCURRENT_SCRAPERS=3
